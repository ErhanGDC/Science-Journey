@model ScienceJourney.Models.MuseumModel
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-messages.min.js"></script>
    <script src="~/Scripts/DB/GetMusems.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/img.css" rel="stylesheet" />
</head>
<body ng-app="myApp">
    <div ng-controller="CtrlGetMuseum" ng-init="init()">
        <br />
        <div>
            <div class="container" ng-repeat="mus in museums">
                <b class="modal-title">{{mus.MuseumName}}</b>

                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <b class="modal-title">{{mus.MuseumName}}</b>
                            </div>
                            <div class="modal-body">
                                <p>
                                    {{mus.MuseumDescription}}
                                    <br />
                                    <br />
                                    <h4>Others</h4>
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <dl>
                                                <dt>
                                                    <b> Museum Name: {{mus.MuseumName}}</b>
                                                    <br /><br />
                                                    <b>Visittor Count Annual: {{mus.AnnualVisitorCount}}</b>
                                                    <br /><br />
                                                    <b>Opening Hours: {{mus.OpeningHours}}</b>
                                                    <br /><br />
                                                    <b><input type="checkbox" ng-checked="mus.Shop==1" ng-model="mus.Shop" disabled="disabled">Shop</b>
                                                    <br /><br />
                                                    <b><input type="checkbox" ng-checked="mus.Smoking==1" ng-model="mus.Smoking" disabled="disabled">Smoking</b>
                                                    <br /><br />
                                                    <b> Built Date : {{mus.DateBuilt}}</b>
                                                </dt>
                                            </dl>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <img ng-src="~/UploadedFiles/{{mus.Picture}}" class="img-responsive" alt="Responsive image" height="2048" width="1024" />
                                </p>
                            </div>
                            <br />
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <img ng-src="~/UploadedFiles/{{mus.Picture}}" class="img-responsive" alt="Responsive image" height="640" width="320" />
                <!-- Trigger the modal with a button -->
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Museum</button>
                <br>
            </div>
        </div>
    </div>
</body>
</html>



